<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/home"
    tools:context="com.example.jerryduran.myapplication.MainActivity">


    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/homeTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:text="CSUS"
        android:layout_width="wrap_content"
        tools:layout_marginLeft="40dp"
        android:alpha="200"
        android:fontFamily="cursive"
        android:textSize="70sp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:text="Tree Identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homeTitle2"
        android:textColor="@android:color/white"
        android:alpha="200"
        android:textSize="50sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:fontFamily="sans-serif"
        android:textStyle="italic"
        android:layout_below="@+id/homeTitle"
        android:layout_centerHorizontal="true" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchTree"
        android:orientation="horizontal"
        android:alpha="0.55"
        android:background="#bdc6c9"
        android:layout_marginBottom="188dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/homeTitle2"
        android:layout_alignEnd="@+id/homeTitle2"
        android:layout_alignLeft="@+id/homeTitle2"
        android:layout_alignStart="@+id/homeTitle2"/>
        <!-- android:onClick="onSearchClick" -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchLabel"
        android:text="Search by Tag# or Species Name"
        android:alpha="1"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_above="@+id/searchTree"
        android:layout_alignLeft="@+id/searchTree"
        android:layout_alignStart="@+id/searchTree" />



</RelativeLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_main"
        android:layout_gravity="start">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>